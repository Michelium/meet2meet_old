{% extends 'base.html.twig' %}

{% block title %}Profile {{ user.displayname }}{% endblock %}

{% block body %}
  <div class="row">
    <div class="card w-75 m-auto">
      <div class="row">
        <div class="col-12">
          <h4 class="text-secondary float-left">{{ user.displayname }}</h4>
          <a href="{{ path('profile_edit', { id : user.id }) }}" class="btn btn-sm btn-primary float-right"><i
                    class="fas fa-cog"></i> Edit profile</a>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-lg-6">
          <div class="row">
            <div class="col-12">
              <p class="text-muted">{{ user.firstname }} {{ user.lastname }} <span
                        class="small">{{ age }} y/o</span></p>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
                <h6 class="text-info font-weight-bolder">Current status</h6>
                <p>{{ user.status }}</p>
            </div>
          </div>
          <hr class="w-50 float-left">
          <br><br>
          <div class="row">
            <div class="col-12">
              <p>
                <span class="small">Home country:</span><br>
                {% if user.homeCountry %}
                  <img src="{{ asset('images/flags/' ~ user.homeCountry.flagcode ~ '.png') }}"
                       alt="{{ user.homeCountry.flagcode }}" align="middle">
                  {{ user.homeCountry.name }}
                {% else %}
                  <span class="text-danger">Not available</span>
                {% endif %}
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <p>
                <span class="small">Current country:</span><br>
                {% if user.currentCountry %}
                  <img src="{{ asset('images/flags/' ~ user.currentCountry.flagcode ~ '.png') }}"
                       alt="{{ user.currentCountry.flagcode }}" align="middle">
                  {{ user.currentCountry.name }}
                {% else %}
                  <span class="text-danger">Not available</span>
                {% endif %}
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <p>
                <span class="small">Languages:</span><br>
                {% if languages is not null %}
                  <ul>
                    {% for language in languages %}
                      <li>{{ language.language.name }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <p>
                <span class="small">Education:</span><br>
                {{ user.education }}
              </p>
            </div>
          </div>
        </div>
        <div class="col-sm-12 col-lg-6">
          <div class="row float-right mr-lg-2 mt-lg-2">
            {% if user.avatar %}
              <img class="img-thumbnail" width="150px" height="150px" src="{{ asset('uploads/avatars/' ~ user.avatar ~ '') }}" alt="Profile picture">
            {% endif %}
          </div>
          <div class="row">
            <map name="">

            </map>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-12">
          <h6 class="text-info font-weight-bolder">About me:</h6>
          <p>{{ user.about }}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h6 class="text-info font-weight-bolder">Hobbies or other interests:</h6>
          <p>{{ user.hobbies }}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h6 class="text-info font-weight-bolder">Favourite music:</h6>
          <p>{{ user.music }}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h6 class="text-info font-weight-bolder">Favourite movies:</h6>
          <p>{{ user.movies }}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h6 class="text-info font-weight-bolder">Favourite books:</h6>
          <p>{{ user.books }}</p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
